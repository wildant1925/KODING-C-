SOAL 4.1========================================================
#include <iostream>
#include <conio.h>

using namespace std;
int main ()

{
	int nilai;
	
	char nama[12];
	cout << "Masukkan nama anda"<<nama;
	cin >> nama;
	cout << "Nama anda"<< nama << endl;
	cout << "Masukkan nilai anda" ;
	cin >> nilai;
	
	if ((nilai>=60)&&(nilai<=60))
		
		cout << "Anda Lulus\n";
		cout << "selamat ya.."<<endl;
	 
	getch ();
	return (0);
	
}
SOAL 4.2========================================================
#include <iostream>
#include <conio.h>
using namespace std;
int main ()
{
	int nilai;
	char nama [20];
	cout << "Masukkan nama";
	cin >>nama;
	cout << "Nama anda :"<<nama<<endl;
	cout <<"Masukkan nilai anda :";
	cin >>nilai;
	
if((nilai >=81)&&(nilai <=100))
cout<<"Nilai anda A";

else if((nilai >=71)&&(nilai <81))
cout<<"Nilai anda B";

else if((nilai >=61)&&(nilai <70))
cout<<"Nilai anda C";

else if((nilai >=41)&&(nilai <60))
cout<<"Nilai anda D";

else if((nilai <=40))
cout<<"Nilai anda E";

else 
cout <<"Anda salah memasukkan nilai";


getch();
return(0);
}
SOAL 4.3========================================================
#include <iostream>
#include <conio.h>
using namespace std;
int main()
{
	char nama [20];
	cout << "Masukkan nama anda";
	cin >> nama;
	

	int pilihan;
	cout << "Nama anda adalah"<<nama<<endl;
	cout << "-----MENU PILIHAN-----"<<endl;
	cout << "pilihan 1 : nilai 81-100"<<endl;
	cout << "pilihan 2 : nilai 71-80" <<endl;
	cout << "pilihan 3 : nilai 61-70" <<endl;
	cout << "pilihan 4 : nilai 41-60" <<endl;
	cout << "pilihan 5 : nilai 0-40" <<endl;
	cout << "Masukkan pilihan anda [1..5]:";
	cin >> pilihan;
	
switch (pilihan)
{
		case 1 : cout << "Nilai Anda A";
		break;
		case 2 : cout << "Nilai Anda B";
		break;
		case 3 : cout << "Nilai Anda C";
		break;
		case 4 : cout << "Nilai Anda D";
		break;
		case 5 : cout << "Nilai Anda E";
		break;
	default : cout << "Anda memasukkan pilihan salah";
}
	getch ();
	return(0);
}
SOAL 4.4========================================================
#include <iostream>
#include <conio.h>
using namespace std;
int main()
{
	int jenis_kelamin, tinggi;
	char nama [20];
	cout << "Masukkan nama anda :";
	cin >> nama;
	
	cout << "Nama anda adalah "<<nama<<endl;
	cout << "Jenis Kelamin anda \n"<<endl;
	cout << "pilihan 1 :Laki-laki"<<endl;
	cout << "pilihan 2 :Perempuan" <<endl;

	cout << "Masukkan kelamin anda [1..2]:";
	cin >> jenis_kelamin;
	cout << "Tinggi badan anda :";
	cin >> tinggi;
	
	
	if(jenis_kelamin==1){
     if(tinggi >= 165){
        cout << "Anda lulus" ;
     }
     else if(tinggi < 165){
        cout << " Maaf tinggi badan anda belum memenuhi syarat" ;
     }
 	}

	if(jenis_kelamin==2){
     if(tinggi >= 160){
        cout << "Anda lulus" ;
     }
     else if(tinggi < 160){
        cout << " Maaf tinggi badan anda belum memenuhi syarat" ;
     }
     }

	getch ();
	return(0);
}
SOAL 5.1========================================================
#include <iostream>
using namespace std;

int main ()
{
	int a,b ;
	cout << "Massukan Nilai A :";
	cin >> a;
	cout << "Maussukan Nilai B :" ;
	cin >> b;
	
	if (a%2==0)
		{cout << a <<"adalah bilangan Genap"<<endl; 	}
		else
		{cout << a <<"adalah bilangan Ganjil"<<endl;	}
	if (b%2==0)
		{cout << b <<"adalah bilangan Genap"<<endl;		}
		else
		{cout << b <<"adalah bilangan Ganjil"<<endl;	}
		
	if (a>b)
		{cout << "Nilai terbesar adalah"<<a<<endl;		}
		else if (b>a)
		{cout << "Nilai terbesar adalah"<<b<<endl;		}
		else
		{cout << "Angka bernilai sama";}	
}
