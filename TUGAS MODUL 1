SOAL 5.4=========================================================================

#include <iostream>
#include <stdio.h>
using namespace std;
int main(){
float C, R, F, K; 
cout << "Konversi Celcius ke Reamur, Farenheit, dan Kelvin"<<endl;
cout << "Masukkan nilai C : ";
cin >> C;
F = (C*1.8) + 32;
R = C*0.8;
K = C +  273;
cout << "Hasil konversi"<<endl;
cout<<"F : "<<F<<endl;
cout<<"R : "<<R<<endl;
cout<<"K : "<<K<<endl;
}

