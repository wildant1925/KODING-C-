SOAL 4.3===========================================================================

#include <iostream>
#include <conio.h>
#include<stdio.h>
using namespace std;

int main()
{
	int a,b,hasil;
	cout << "Masukkan nilia a :";
	cin >> a;
	
	cout << "Masukkan nilai b :";
	cin >> b;
	
	hasil =a*b;
	cout<<"Hasil dari x*y ="<< hasil;
	getch();
	return(0);
	
}

SOAL 5.1========================================================================

#include <iostream>
#include <stdio.h>
#include <conio.h>
using namespace std;
int main()
{
string nama_anda;
printf("nama saya %s\n","tomy" );
printf("umur saya %d tahun \n", 25); 
printf ("siapakah nama anda :");
getline(cin, nama_anda);
cout<< "nama anda adalah : "<< nama_anda; 
getch();
return(0);
}

